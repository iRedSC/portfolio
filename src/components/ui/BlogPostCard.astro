---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags: string[];
  slug: string;
  readingTime?: number;
}

const { title, description, pubDate, updatedDate, tags, slug, readingTime } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<a href={`/blog/${slug}`} class="blog-card">
  <div class="blog-card-content">
    <div class="blog-card-top">
      <h3 class="blog-title">{title}</h3>
      <p class="blog-description">{description}</p>
    </div>
    <div class="blog-card-bottom">
      <div class="blog-tags">
        {tags.map((tag: string) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      <div class="blog-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {readingTime && (
          <span class="reading-time">{readingTime} min read</span>
        )}
      </div>
    </div>
  </div>
</a>

<style>
  .blog-card .blog-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--text);
  }

  .blog-description {
    color: var(--muted);
    margin: 0;
    line-height: 1.5;
  }

  .blog-card-bottom {
    margin-top: auto;
    padding-top: 1rem;
  }

  .blog-tags {
    margin-bottom: 0.75rem;
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--muted);
    margin: 0;
  }

  .reading-time {
    opacity: 0.8;
  }

  .blog-card-bottom .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--accent-soft);
    color: var(--accent);
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    font-size: 0.8rem;
  }
</style>