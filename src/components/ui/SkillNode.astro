---
interface Props {
  id: string;
  name: string;
  level: number;
  maxLevel?: number;
  description?: string;
  dependencies?: string[];
}

const { id, name, level, maxLevel = 5, description, dependencies = [] } = Astro.props;
const progressPercentage = (level / maxLevel) * 100;
---

<div class="skill-node" data-skill-id={id}>
  <div class="skill-node-circle" style={`--progress: ${progressPercentage}%`}>
    <div class="skill-node-content">
      <span class="skill-node-level">{level}</span>
    </div>
  </div>
  <div class="skill-node-label">
    {name}
  </div>
  {description && (
    <div class="skill-node-tooltip">
      {description}
    </div>
  )}
</div>

<style>
  .skill-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .skill-node-circle {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background: conic-gradient(
      var(--color-primary) var(--progress),
      var(--color-border) var(--progress)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .skill-node-circle::before {
    content: '';
    position: absolute;
    inset: 2px;
    border-radius: 50%;
    background: var(--color-background);
  }

  .skill-node-content {
    position: relative;
    z-index: 1;
  }

  .skill-node-level {
    font-weight: bold;
    color: var(--color-text);
  }

  .skill-node-label {
    font-size: 0.875rem;
    text-align: center;
    max-width: 6rem;
  }

  .skill-node-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.5rem;
    font-size: 0.75rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
    white-space: nowrap;
  }

  .skill-node:hover .skill-node-tooltip {
    opacity: 1;
  }
</style>