---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  image?: string;
  readingTime?: number;
  layout?: 'blog' | 'project' | 'tldr';
}

const { title, description, pubDate, updatedDate, tags = [], image, readingTime, layout = 'blog' } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updatedFormatted = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={title} description={description} image={image}>
  <article class="post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {updatedDate && (
          <time datetime={updatedDate.toISOString()} class="updated">
            Updated {updatedFormatted}
          </time>
        )}
        {readingTime && (
          <span class="reading-time">{readingTime} min read</span>
        )}
      </div>

      <h1 class="post-title">{title}</h1>

      {description && (
        <p class="post-description">{description}</p>
      )}

      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="post-content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .updated {
    opacity: 0.8;
  }

  .reading-time {
    background: var(--color-muted);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--color-text);
    line-height: 1.1;
  }

  .post-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin: 0 0 2rem 0;
    line-height: 1.4;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tag {
    background: var(--color-primary);
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .post-content {
    line-height: 1.7;
  }

  .post-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .post-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .post-content :global(ul), .post-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(code) {
    background: var(--color-muted);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.875em;
  }

  .post-content :global(pre) {
    padding: 1rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre:not(.astro-code)) {
    background: var(--color-muted);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .post-content :global(img) {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  .post-content :global(.astro-code) {
    margin: 1.5rem 0;
    border-radius: 12px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .post {
      padding: 1rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.125rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>